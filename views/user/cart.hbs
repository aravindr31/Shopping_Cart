<section>
  <div class="container">
    {{#if cartCount}}
    <table class="table table-borderless mt-5">
      <thead>
        <tr>

          <th class="text-center" scope="col">Item</th>
          <th class="text-center" scope="col">Title</th>
          <th class="text-center" scope="col">Quantity</th>
          <th class="text-center" scope="col">Price</th>
        </tr>
      </thead>
      <tbody>

        {{#each products}}
        <tr>
          <td class="text-center"><img src="/product_images/{{this.product._id}}.jpg" width="100px" height="100px"
              alt=""></td>
          <td class="text-center align-middle">{{this.product.name}}</td>
          <td class="text-center align-middle">
            <button class="btn btn-info mr-2 "
              onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../userId}}',1)">+</button>
            <span id="{{this.product._id}}">{{this.quantity}}</span>
            <button class="btn btn-info ml-2 "
              onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../userId}}',-1)">-</button></td>
          <td class="text-center align-middle">{{this.product.price}}</td>
          <th class="text-center align-middle"><button
              onclick="deleteFromCart('{{../user}}','{{this.product._id}}','{{this._id}}')"
              class="btn btn-danger ">Remove From Cart</button></th>
        </tr>
        {{/each}}
      </tbody>
    </table>
    <hr>
    <h2 class="float-right mr-5">Total Price : <span id="total">{{totalAmount}}</span> </h2>
    <div class="text-center  p-5">

      <a href="/" class=" mt-3 btn btn-warning">
        Continue Shopping</a>
      <a href="/place_order" class="mt-3 btn btn-success">Proceed to Buy</a>
      {{else}}
      <div class="emptyCartContainer">
        <h1 class="display-1">Cart is Empty!!!</h1>
        <br>
        <a href="/" class="btn btn-primary">Shop Now</a>
      </div>

      {{/if}}
    </div>
</section>

<style>
  .emptyCartContainer {
    margin: 0;
    padding: 0;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
  }

  .emptyCartContainer>h1 {
    color: lightgrey;
  }
</style>