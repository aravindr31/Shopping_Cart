</div>
    <div class="container mt-4">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card " style="width:15rem;height:22rem;">
                    <img class="card-img-top mt-2" style="width: 180px;height:180px" src="/product_images/{{this._id}}.jpg"
                        alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title ">{{this.name}}</h5>
                        <h3 class="card-text">Rs {{this.price}}</h3>
                        <div class="main-btn">
                        <button onclick="addToCart('{{this._id}}')"style="background-color:#FF9F00;color:white" class="btn btn-light mr-1">Add To Cart</button>
                        <a href="/buynow/{{this._id}}" style="background-color:#FB641B;color:white" class="btn btn-light">Buy Now</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</section>
<style>
    .card {
      box-shadow: 0 0 10px 0 rgba(73, 73, 73, 0.5);
    }
    .main-btn{
        display: flex;
        flex: 1;
    }
</style>
